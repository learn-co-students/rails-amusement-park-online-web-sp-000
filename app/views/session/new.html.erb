
<%= form_tag('/session', method: 'post') do %>

  <div class="form-group">
    <%= label_tag(:name, "Enter Name:") %>
    <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Select your username") %>
  </div>

  <div class="form-group">
    <%= label_tag(:password, "Enter Password:") %>
    <%= password_field_tag(:password, nil, Class: "form-control") %>
  </div>

  <div class="actions">
    <%= submit_tag("Sign In") %>
  </div>

<%end%>
