<h1>Signup!</h1>
<%= form_for(:user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br><br>
  <%= f.label :tickets %>
  <%= f.text_field :tickets %>
  <%= f.label 'Height (inches)' %>
  <%= f.text_field :height %><br><br>
  <%= f.label 'How happy are you? (1-5 scale)' %>
  <%= f.text_field :happiness %><br><br>
  <%= f.label 'How nauseous are you? (1-5 scale)' %>
  <%= f.text_field :nausea %><br><br>
  <%= f.label 'Check only if you are the Amusement Park Owner' %>
  <%= f.check_box :admin %>

  <%= f.submit 'Create User'%>
<% end %>
