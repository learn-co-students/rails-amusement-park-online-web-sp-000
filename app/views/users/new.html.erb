<h1>Sign Up!</h1>

<%= form_for @user do |f| %>

  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :password %>:
  <%= f.password_field :password %><br />

  <%= f.label :height %>:
  <%= f.number_field :height %><br />

  <%= f.label :happiness %>:
  <%= f.number_field :happiness %><br />

  <%= f.label :nausea %>:
  <%= f.number_field :nausea %><br />

  <%= f.label :tickets %>:
  <%= f.number_field :tickets %><br />

  <%= f.label :admin, 'Check here if you are a park owner:' %>
  <%= f.check_box :admin %>

  <%= submit_tag "Create User" %>
<% end %>
