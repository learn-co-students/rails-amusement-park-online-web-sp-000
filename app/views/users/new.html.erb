<!DOCTYPE html>
<html>
<head>
<title>RailsAmusementPark</title>
</head>

<body>

<%= form_for(@user) do |u| %> 
    <%= u.label :name %><br>
    <%= u.text_field :name %><br> 
    
    <%= u.label :height %><br>
    <%= u.number_field :height %><br> 

    <%= u.label :happiness %><br>
    <%= u.number_field :happiness %><br> 

    <%= u.label :nausea %><br>
    <%= u.number_field :nausea %><br>
    
    <%= u.label :tickets %><br> 
    <%= u.number_field :tickets %><br> 

    <label>Check box if you own a theme park</label><br>
    <%= u.check_box :admin %><br>

    <%= u.label :password %><br>
    <%= u.password_field :password %><br> 

    <%= u.submit "Create User" %>
<% end %> 

</body>

</html>