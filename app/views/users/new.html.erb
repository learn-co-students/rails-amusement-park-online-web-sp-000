<h1> Sign Up </h1>
<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label :tickets %><br>
  <%= f.number_field :tickets %><br>
  <%= f.label :happiness %><br>
  <%= f.number_field :happiness %><br>
  <%= f.label :nausea %><br>
  <%= f.number_field :nausea %><br>
  <%= f.label :height %><br>
  <%= f.number_field :height %><br>
  <p>Are you an Admin? <%= f.check_box :admin, options = {:class => "user_admin"} %></p><br>
  <%= f.submit %>
<% end %>
