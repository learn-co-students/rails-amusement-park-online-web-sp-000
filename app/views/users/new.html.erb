<h1>Sign Up</h1>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%><br><br>
    <%= f.label :height, "Height (in inches)" %>
    <%= f.number_field :height%><br><br>
    <%= f.label :happiness, "How happy are you right now? (1-5)" %>
    <%= f.number_field :happiness%><br><br>
    <%= f.label :nausea, "How nauseous are you right now? (1-5)" %>
    <%= f.number_field :nausea%><br><br>
    <%= f.label :tickets, "How many tickets would you like to purchase? (0-100)"%>
    <%= f.number_field :tickets%><br><br>
    <%= f.label :admin, "Admin?" %>
    <%= f.check_box :admin %><br><br>
    <%= f.label :password %>
    <%= f.password_field :password, id: "password" %><br><br>

    <%= f.submit "Create User" %>
<% end%>