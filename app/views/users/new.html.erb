<%= form_for @users do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name, class: "form-control" %><br/>

  <%= f.label :height, 'Heigh (in inches)' %><br/>
  <%= f.text_field :height, class: "form-control" %><br/>

  <%= f.label :happiness, 'How happy are you? (1-5 scale)' %><br/>
  <%= f.text_field :happiness, class: "form-control" %><br/>

  <%= f.label :nausea, 'How nauseous are you? (1-5 scale)' %><br/>
  <%= f.text_field :nausea, class: "form-control" %><br/>

  <%= f.label :tickets, 'How many dollars are in your pocket?' %><br/>
  <%= f.text_field :tickets, class: "form-control" %><br/>

  <%= f.check_box :admin %>
  <%= f.label :admin, 'Check box if you are a theme park owner' %><br/><br/>  

  <%= f.label :password %><br/>
  <%= f.text_field :password, class: "form-control" %><br/>  

  <%= f.submit class: 'btn btn-primary' %>
<% end %>