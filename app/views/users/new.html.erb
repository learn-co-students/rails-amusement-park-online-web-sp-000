<%= form_for @user, controller: 'users', action: 'create' do |f| %>
  <h1>Sign Up</h1>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label "Height (in inches)" %>
  <%= f.text_field :height %>
  <br />
  <%= f.label "How happy are you? (1-5 scale)" %>
  <%= f.text_field :happiness %>
  <br />
  <%= f.label "How nauseous are you? (1-5 scale)" %>
  <%= f.text_field :nausea %>
  <br />
  <%= f.label "How many dollars are in your pocket?" %>
  <%= f.text_field :tickets %>
  <br />
  <%= f.label :password %>
  <%= f.text_field :password %>
  <br />
  <%= f.label "Are you an amusement park owner?" %>
  <%= f.check_box :admin %>
  <br />
  <%= f.submit "Create User" %>

<% end %>
