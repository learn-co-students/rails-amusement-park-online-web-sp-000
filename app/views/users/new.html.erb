<h1>Sign Up</h1>

<%= form_for User.new do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>
     
  <p><%= f.label :height, 'Height (in inches)' %>
  <%= f.text_field :height %></p>
     
  <p><%= f.label :happiness, 'Happiness (1-5)' %>
  <%= f.text_field :happiness %></p>
     
  <p><%= f.label :nausea, 'Nausea (1-5)' %>
  <%= f.text_field :nausea %></p>
     
  <p><%= f.label :tickets %>
  <%= f.text_field :tickets %></p>
     
  <p><%= f.label :password %>
  <%= f.password_field :password %></p>

  <p><%= f.label :admin %>
  <%= f.check_box :admin %> </p>

  <p><%= f.submit %></p>
<% end %>