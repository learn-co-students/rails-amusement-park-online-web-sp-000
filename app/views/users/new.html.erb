<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name%>
    </div>
    <div class="form-group">
      <%= f.label "Height in inches" %>
      <%= f.number_field :height%>
    </div>
    <div class="form-group">
      <%= f.label "How happy are you? (Scale 1 - 5)" %>
      <%= f.number_field :happiness%>
    </div>
    <div class="form-group">
      <%= f.label "How nauseous are you? (1-5 scale)" %>
      <%= f.number_field :nausea%>
    </div>
    <div class="form-group">
      <%= f.label :tickets %>
      <%= f.number_field :tickets%>
    </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password%>
  </div>
  <div class="form-group">
    <%= f.check_box(:admin) %>
    <%= f.label "Check box if you are a theme park owner" %>
  </div>
  <div class="form-group">
      <%= f.submit "Create User" %>
  </div>
<% end %>
