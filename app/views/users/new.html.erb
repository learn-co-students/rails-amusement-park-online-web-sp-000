<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :height %>
      <%= f.email_field :height %>
      <%= f.label :happiness %>
      <%= f.text_field :happiness %>
      <%= f.label :nausea %>
      <%= f.text_field :nausea %>
      <%= f.label :tickets %>
      <%= f.text_field :tickets %>
      <%= f.label :user_admin, class: "checkbox inline", id: "#user_admin" do %>
        <%= f.check_box :admin %>
        <span>Admin?</span>
      <% end %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create User", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>