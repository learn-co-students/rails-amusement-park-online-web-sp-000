<h1>Sign up here: </h1>

<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :height %>
  <%= f.text_field :height %><br>

  <%= f.label :happiness %>
  <%= f.text_field :happiness %><br>

  <%= f.label :nausea %>
  <%= f.text_field :nausea %><br>

  <%= f.label :tickets %>
  <%= f.text_field :tickets %><br>

  <%= f.label :admin %>
  <%= f.collection_select :admin, User.all, :id, :admin %>

  <%= f.submit %>
<% end %>
