<%= form_for(@user) do |f| %>
    <div><%= f.label 'Name' %><br>
        <%= f.text_field :name %></div><br>
    <div><%= f.label 'Height (in inches)' %><br>
        <%= f.text_field :height %></div><br>
    <div><%= f.label 'How happy are you? (1-5 scale)' %><br>
        <%= f.text_field :happiness %></div><br>
    <div><%= f.label 'How nauseous are you? (1-5 scale)' %><br>
        <%= f.text_field :nausea %></div><br>
    <div><%= f.label 'How many tickes do you have?' %><br>
        <%= f.text_field :tickets %></div><br>
    <div><%= f.label 'Password' %><br>
        <%= f.text_field :password %></div><br>
    <div><%= f.label 'Check for Admin ' %>
        <%= f.check_box :admin, {}, "true", "false" %>

    <div><%= f.submit 'Create User' %>
<% end %>
