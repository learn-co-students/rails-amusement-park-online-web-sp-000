<%= form_for(@user) do |f| %>
  <p><%= f.label "Name" %><br>
  <%= f.text_field :name %></p>

  <p><%= f.label "Height (in inches)" %><br>
  <%= f.text_field :height %></p>

  <p><%= f.label "How happy are you? (1-5 scale)" %><br>
  <%= f.text_field :happiness %></p>

  <p><%= f.label "How nauseous are you? (1-5 scale)" %><br>
  <%= f.text_field :nausea %></p>

  <p><%= f.label "How many dollars are in your pocket?" %><br>
  <%= f.text_field :tickets %></p>

  <p><%= f.label "Check box if you are a theme park owner" %>
  <%= f.check_box :admin %></p>

  <p><%= f.label "Password" %><br>
  <%= f.text_field :password_digest %></p>

  <p><%= f.submit %><p>
<% end %>
