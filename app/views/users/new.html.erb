<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
  <%= f.label :name, "Your name:" %>
    <%= f.text_field :name %>
  <br>
  <%= f.label :password, "Create a password:" %>
    <%= f.password_field :password %>
  <br>
  <%= f.label :happiness, "Happiness level:" %>
    <%= f.number_field :happiness, in: 1..10, step: 1 %>
  <br>
  <%= f.label :nausea, "Nausea level:" %>
    <%= f.number_field :nausea, in: 1..10, step: 1 %>
  <br>
  <%= f.label :height, "Height (in inches):" %>
    <%= f.number_field :height, in: 20..108, step: 1 %>
  <br>
  <%= f.label :tickets, "How many tickets do you want?" %>
    <%= f.number_field :tickets, in: 1..1000000, step: 1 %>
  <br>
  <%= f.label :admin, "Are you an admin? Check this box if you are." %>
    <%= f.check_box :admin %>
  <br>
  <%= f.submit "Create User" %>
<% end %>