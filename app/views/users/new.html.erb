<%= form_for @user, :class => "new_user" do |f| %>
    <%= f.label :name %><br />
    <div class="form-group">
        <%= f.text_field :name %><br />
    </div>
    <%= f.label :height, "Height (in inches)"  %><br />
    <div class="form-group">
        <%= f.text_field :height %><br />
    </div>
    <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br />
    <div class="form-group">
        <%= f.text_field :happiness %><br />
    </div>
    <div class="form-group">
        <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br />
        <%= f.text_field :nausea %><br />
    </div>
    <%= f.label :tickets, "How many dollars are in your pocket?" %><br />
    <div class="form-group">
        <%= f.text_field :tickets %><br />
    </div>
    <%= f.label :admin, "Check box if you are a theme park owner" %>
        <%= f.check_box :admin %><br />
    <%= f.label :password, "Password" %><br />
    <div class="form-group">
        <%= f.text_field :password %><br />
    </div>
    <%= f.submit "Create User" %>
<% end %>