<h1>Sign-up</h1>

<%= form_for(@user) do |f| %>

    <label for="user_name">Name</label><br>
    <%= f.text_field :name %><br>

    <label for="user_height">Height (in inches)</label><br>
    <%= f.text_field :height %><br>

    <label for="user_happiness">How happy are you? (1-5 scale)</label><br>
    <%= f.text_field :happiness %><br>

    <label for="user_nausea">How nauseous are you? (1-5 scale)</label><br>
    <%= f.text_field :nausea %><br>

    <label for="user_tickets">How many dollars are in your pocket?</label><br>
    <%= f.text_field :tickets %><br>

    <label for="user_password">Password</label><br>
    <%= f.password_field :password %><br>

    <label for="user_admin">Check box if you are a theme park owner</label><br>
    <%= f.check_box :admin %><br>

    <%= f.submit value:"Create User"%> 
<% end%>
