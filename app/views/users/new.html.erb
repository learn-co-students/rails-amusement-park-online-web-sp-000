<%= form_for(@user) do |f| %>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %> <br>

    <%= f.label :height, "Height (in inches): " %>
    <%= f.number_field :height %> <br>

    <%= f.label :happiness, "How happy are you?: " %>
    <%= f.number_field :happiness, in: 1..5 %> <br>

    <%= f.label :nausea, "How nauseous are you?: " %>
    <%= f.number_field :nausea, in: 1..5 %> <br>

    <%= f.label :tickets, "How many tickets do you have? : " %>
    <%= f.number_field :tickets %> <br>

    <%= f.label :password, "Password: " %>
    <%= f.password_field :password %> 

    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %>

    <%= f.submit %>
  <% end %>