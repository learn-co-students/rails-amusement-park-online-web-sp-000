<h1>Sign up as a new user!</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :tickets %>
  <%= f.number_field :tickets, :value => 10 %><br>
  

  <%= f.label :nausea %>
  <%= f.number_field :nausea, :value => 5 %><br>
  

  <%= f.label :happiness %>
  <%= f.number_field :happiness, :value => 7 %><br>
  

  <%= f.label :height %>
  <%= f.number_field :height, :value => 150 %>
  

  <%= f.label :admin %>
  <%= f.check_box :admin %>

  <%= f.submit "Create User" %>

<% end %>