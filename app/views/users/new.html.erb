<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label "Height (in inches)" %><br>
  <%= f.number_field :height %><br><br>
  <%= f.label "How happy are you? (1-5 scale)" %><br>
  <%= f.number_field :happiness %><br><br>
  <%= f.label "How nauseous are you? (1-5 scale)" %><br>
  <%= f.number_field :nausea %><br><br>
  <%= f.label "How many tickets do you have?" %><br>
  <%= f.number_field :tickets %><br><br>

  <%= f.label :admin, "Check box if you are a theme park owner" %>
  <%= f.check_box :admin, {}, 'true', 'false' %><br><br> 

  <%= f.label :password %><br>
  <%= f.password_field :password %><br><br>
  <%= f.submit %>
<% end %>
