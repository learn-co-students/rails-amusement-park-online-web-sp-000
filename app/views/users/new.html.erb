<%= form_for @user do |f| %>
    <label>Name</label>
    <%= f.text_field :name %>
    <label></label>
    <%= f.text_field :height %>
    <label>How nauseous are you? (1-5 scale)</label>
    <%= f.text_field :nausea %>
    <label>How happy are you? (1-5 scale)</label>
    <%= f.text_field :happiness %>
    <label>How many dollars are in your pocket?</label>
    <%= f.text_field :tickets %>
    <label>Check box if you are a theme park owner</label>
    <%= f.check_box :admin %>
    <label>Password</label>
    <%= f.password_field :password %>


    <%= f.submit %>
<% end %>
