    <%= form_for @user, :url =>  users_new_path do |f| %>
        <%= f.label "Name" %>
        <%= f.text_field :name %>
        <br>
        <%= f.label "Height" %>
        <%= f.text_field :height %>
        <br>
        <%= f.label "Happiness" %>
        <%= f.text_field :happiness %>
        <br>
        <%= f.label "Nausea" %>
        <%= f.text_field :nausea %>
        <br>
        <%= f.label "Tickets" %>
        <%= f.text_field :tickets %>
        <br>
        <%= f.label "Admin:" %>
        <%= f.check_box :admin %>
        <br>
        <%= f.label "Password" %>
        <%= f.password_field :password %>
        <br>
        <%= f.submit "Create User" %>
    <% end %>