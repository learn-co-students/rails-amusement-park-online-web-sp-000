<h1> Create a new user </h1>
<%= form_for User.new do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :height %>
  <%= f.number_field :height %></p>

  <p><%= f.label :password %>
  <%= f.number_field :password %></p>
  
  <p><%= f.label :nausea %>
  <%= f.number_field :nausea %></p>

  <p><%= f.label :tickets %>
  <%= f.number_field :tickets %></p>

  <p><%= f.label :happiness %>
  <%= f.number_field :happiness %></p>

  <p><%= f.label "Park Owner?" %>
  <%= f.check_box :admin %></p>

  <p><%= f.submit "Create User" %></p>
<% end %>
