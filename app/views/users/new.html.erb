<%= form_for(@user) do |f| %>

    <% if @user.errors.any? %>
        <%= pluralize(@user.errors.count, "error")%> prohibited this user from being saved.<br> 
        <ul>
        <% @user.errors.full_message.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    <% end %>


    <%= f.label "Name" %>
    <%= f.text_field :name %><br>
    <%= f.label "Height" %>
    <%= f.number_field :height %><br>
    <%= f.label "Happiness" %>
    <%= f.number_field :happiness %><br>
    <%= f.label "Nausea" %>
    <%= f.number_field :nausea %><br>
    <%= f.label "Tickets" %>
    <%= f.number_field :tickets %><br>
    <%= f.label "Password" %>
    <%= f.password_field :password %><br>

    <%= f.label "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %><br>

    <%= f.submit "Create User" %>
<% end %>