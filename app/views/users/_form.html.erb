<%= form_for @user do |f| %>
    <%= f.label 'Name' %>
    <%= f.text_field :name %>
    <%= f.label 'Height' %>
    <%= f.text_field :height %>
    <%= f.label 'Happiness' %>
    <%= f.text_field :happiness %>
    <%= f.label 'Nausea' %>
    <%= f.text_field :nausea %>
    <%= f.label 'Tickets' %>
    <%= f.text_field :tickets %>
    <%= f.label 'Password' %>
    <%= f.text_field :password %>
    <%= f.check_box :admin %>
    <%= f.submit 'Create User' %>
<% end %>
