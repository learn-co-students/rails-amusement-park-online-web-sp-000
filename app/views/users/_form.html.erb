<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
      </h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name, class: "form-control" %></div>

  <div class="form-group">
  <%= f.label :height, "Height (in inches)" %><br>
  <%= f.text_field :height, class: "form-control" %></div>

  <div class="form-group">
  <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br>
  <%= f.text_field :happiness, class: "form-control" %></div>

  <div class="form-group">
  <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br>
  <%= f.text_field :nausea, class: "form-control" %></div>

  <div class="form-group">
  <%= f.label :tickets, "How many dollars are in your pocket?" %><br>
  <%= f.text_field :tickets, class: "form-control" %></div>

  <p><%= f.label :admin, "Check box if you are a theme park owner" %>
  <%= f.check_box :admin %></p>

  <div class="form-group">
  <p><%= f.label :password %><br>
  <%= f.password_field :password, class: "form-control" %></div>

  <p><%= f.submit class: "btn btn-primary" %><p>
<% end %>
