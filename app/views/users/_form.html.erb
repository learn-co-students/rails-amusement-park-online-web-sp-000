<h1>Signup</h1>

<%= form_for(@user) do |f| %>

<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :height %> (in inches)
<%= f.number_field 'height' %><br>

<%= f.label :happiness %> How happy are you? (1-5 scale) 
<%= f.number_field 'happiness', in: 1...6 %><br>

<%= f.label :nausea %> How nauseated are you? (1-5 scale)
<%= f.number_field 'nausea', in: 1...6 %><br>

<%= f.label :tickets %> How many tickets are in your pocket?
<%= f.number_field :tickets %><br>

<%= f.label :admin %> Check box if you are a theme park owner 
<%= f.check_box(:admin) %><br>

<%= f.label :password %>
<%= f.password_field(:password) %><br>

<%= f.submit "Create User" %>

<% end %>