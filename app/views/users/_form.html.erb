<h1>User</h1>

<% if @user.errors.any? %>
  <div class="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being saved:
    </h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
    Name: <%= f.text_field :name, placeholder: "Name" %><br>
    Height: <%= f.number_field :height %><br>
    Nausea: <%= f.number_field :nausea %><br>
    Happiness: <%= f.number_field :happiness %><br>
    Tickets: <%= f.number_field :tickets %><br>
    Admin?: <%= f.check_box :admin %><br>
    Password: <%= f.password_field :password %><br>
    <%= f.submit %>
<% end %>