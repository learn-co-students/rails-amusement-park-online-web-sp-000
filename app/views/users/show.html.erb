<% if flash[:message] %>
    <p><%= flash[:message] %></p>
<% end %>
<h1><%= @user.name %></h1><br>
<h3>Tickets: <%= @user.tickets %></h3><br>
<% if @user.happiness && @user.nausea %>
    <h3>Mood: <%= @user.mood %></h3><br>
<% end %>
<h3>Height: <%= @user.height %> inches</h3><br>

<% if @user.admin %>
    <p>ADMIN</p>
<% end %>

<%= link_to "See attractions", attractions_path %>

<%= link_to "Log Out", logout_path %>
