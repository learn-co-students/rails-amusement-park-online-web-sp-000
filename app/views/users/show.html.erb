<%= flash[:notice] %>


<h1><%= @user.name %></h1>

<% if @user.admin == false %>
    <h2>Mood: <%= @user.mood %></h2>
    <h2>Height: <%= @user.height %></h2>
    <h2>Happiness: <%= @user.happiness %></h2>
    <h2>Nausea: <%= @user.nausea %></h2>
    <h2>Tickets: <%= @user.tickets %></h2>
<% else %>
    <h2>ADMIN</h2>
<% end %>

<%= link_to 'Log Out', '/logout' %><br>
<%= link_to 'See attractions', '/attractions' %>