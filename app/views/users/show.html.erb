<h1><%=@user.name%></h1>

<% if session[:message] %>
  <p><%=session[:message]%></p>
  <% session.delete :message %>
<% end %>

<h2>Mood: <%=@user.mood%></h2>
<p>Height: <%=@user.height%></p>
<p>Tickets: <%=@user.tickets%></p>

<% if @user.admin %>
<p>ADMIN</p>
<% end %>

