
<p id="notice"><%= notice %></p>

<% if flash[:message] %>
  <div class="center alert">
    <p><%= flash[:message] %></p>
  </div>
<% end %>

<div class="center">

  <div class="info">
    <% if @user.admin %>
      <p><strong>ADMIN</strong></p>
    <% end %>
    <p>
      <strong>Name: </strong><%= @user.name %>
    </p>
    <p>
      <strong>Tickets: </strong><%= @user.tickets %>
    </p>
    <p>
      <strong>Mood: </strong><%= @user.mood %>
    </p>
    <p>
      <strong>Height: </strong><%= @user.height %>
    </p>
    <a href='/attractions'>See attractions</a>
  </div>

</div>