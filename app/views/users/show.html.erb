<div style="text-align: center">
    <p><strong><%="ADMIN" if @user.admin %></strong></p>
    <p><strong>Name: </strong><%= @user.name %></p>
    <%if !@user.admin%>
    <p><strong>Tickets: </strong><%= @user.tickets %></p>
    <p><strong>Mood: </strong><%= @user.mood %></p>
    <p><strong>Height: </strong><%= @user.height %></p><br>
    <%end%>
    <%= link_to 'Edit', edit_user_path %><br>
    <%= link_to 'See attractions', attractions_path %><br>
    <%= link_to "Log Out", logout_path, method: :delete %>
</div>