<% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
<% end %>  

<% if @user.admin %>
    <h1>Name:<%= @user.name %></h1>
    <h1>ADMIN</h1>
<% else %> 
    <h1>Name: <%= @user.name %></h1>
    <h1>Tickets: <%= @user.tickets %></h1>
    <h1>Happiness: <%= @user.happiness %></h1>
    <h1>Nausea: <%= @user.nausea %></h1>
    <h1>Height: <%= @user.height %></h1>
    <h1>Mood: <%= @user.mood %></h1>
<% end %>

<%= link_to "Log Out", @user, method: "delete" %><br>   
<%= link_to "See attractions", attractions_path %>





