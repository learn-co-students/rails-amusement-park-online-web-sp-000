<div class="center">
    <% if flash[:notice] %>
        <%= flash[:notice] %><br><br>
    <% end %>
    <div class="info">
        <% if @user.admin %>
            <p><strong>ADMIN</strong></p>
        <% end %>

        <p><strong>Name: </strong><%= @user.name %></p>
        <p><strong>Tickets: </strong><%= @user.tickets %></p>
        <p><strong>Mood: </strong><%= @user.mood %></p>
        <p><strong>Height: </strong><%= @user.height %></p><br>
        <%= link_to "See attractions", attractions_path %>
    </div>
    <br><br><br><br>
    <%= link_to "Log Out", logout_path %>
</div>