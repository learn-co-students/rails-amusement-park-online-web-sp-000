<% if flash[:message] %>
  <h2><%= flash[:message] %></h2>
<% end %>

<h1><%= @user.name %></h1>
<% if @user.admin? %>
  <p>ADMIN</p>
<% else %>
  <p>Mood: <%= @user.mood %></p>
  <p>Tickets: <%= @user.tickets %></p>
  <p>Height: <%= @user.height %></p>
<% end %>
<%= link_to "Log Out", logout_path, method: "POST" %><br>
<%= link_to "See attractions", attractions_path %>