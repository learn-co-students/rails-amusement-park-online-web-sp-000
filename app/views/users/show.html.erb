<div><% if flash[:message] %>
  <%= flash[:message] %>
<% end %></div>
<h1><%= @user.name %></h1>
<% if @user.admin %>
<p>ADMIN</p>
<% else %>
<p>Height: <%= @user.height %></p>
<p>Mood: <%= @user.mood %></p>
<p>Tickets: <%= @user.tickets %></p>
<p>Nausea: <%= @user. nausea %></p>
<% end %>
<%= link_to "See attractions", attractions_path %><br><br>
<%= link_to "Log Out", logout_path, method: "post" %>