

<h1> <%= @user.name %></h1>

<% if flash[:message] %>
    <%= flash[:message] %><br><br>
<% end %>

    <p>Name: <%= @user.name %></p>

    <p>Height: <%= @user.height %></p>
    <p>Happiness: <%= @user.happiness %></p>
    <p>Nausea: <%= @user.nausea %></p>
    <p>Tickets: <%= @user.tickets %></p>
    <p>Mood: <%= @user.mood %></p>

    <% if @user.admin %>
    <h3>ADMIN</h3>
    <% end %>

    <%= link_to "See attractions", attractions_path %><br>
    <%= link_to "Log Out", logout_path %>
