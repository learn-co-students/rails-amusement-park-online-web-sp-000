<h3>Name: <%= @attraction.name %></h3>
<h3>Total Number of Users: <%= @attraction.name %></h3>
<h3>Ticket Requirement: <%= @attraction.tickets %></h3>
<h3>Height Requirement: <%= @attraction.min_height %></h3>
<h3>Nausea Rating: <%= @attraction.nausea_rating %></h3>
<h3>Happiness Rating: <%= @attraction.happiness_rating %></h3>

<% if current_user.is_admin? %>
    <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
<% else  %>
    <%= form_tag("/rides", method: 'post') do %>
        <%= hidden_field_tag(:attraction_id, @attraction.id) %>
        <%= submit_tag("Go on this ride") %>
    <% end%>
<% end%>