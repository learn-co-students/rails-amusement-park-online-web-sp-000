<h1><%=@attraction.name%></h1>

<%=@attraction.min_height %>
<%=@attraction.tickets %>
<%=@attraction.nausea_rating%>
<%=@attraction.happiness_rating%>
<% if current_user.admin %>
  <%= link_to "Create Attraction", new_attraction_path%>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction.id)%>
  <%else%>
  <%= form_for @ride do |f| %>
    <%= f.hidden_field :user_id%>
    <%= f.hidden_field :attraction_id%>
    <%=f.submit "Go on this ride"%>
    <%end%>
  <%end%>
