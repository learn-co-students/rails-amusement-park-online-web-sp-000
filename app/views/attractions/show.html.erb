Name: <%= @attraction.name %><br><br>
Total Number of Users: <%= @attraction.users.count %><br><br>
Ticket Requirement: <%= @attraction.tickets %><br><br>
Height Requirement: <%= @attraction.min_height %> inches<br><br>
Nausea Rating: <%= @attraction.nausea_rating %> <br><br>
Happiness Rating: <%= @attraction.happiness_rating %> <br><br>



<% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %><br>
  <% else %>
    <%= form_for Ride.new do |f|%>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :attraction_id, value: @attraction.id %>
      <%= f.submit "Go on this ride" %>
      <% end %>
    <br>
<% end %>
