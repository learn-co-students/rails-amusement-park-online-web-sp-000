<ul>
    <li>Name: <%= @attraction.name %></li>
    <li>Tickets Requirement: <%= @attraction.tickets %></li>
    <li>Height Requirement: <%= @attraction.min_height %></li>
    <li>Nausea Rating: <%= @attraction.nausea_rating %></li>
    <li>Happiness Rating: <%= @attraction.happiness_rating %></li>
</ul>

<% if @user.admin == true %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction), class: "btn btn-light" %><br>
<% else %>
    <%= button_to "Go on this ride", take_ride_path(@attraction), class: "btn btn-light" %><br>
<% end %>