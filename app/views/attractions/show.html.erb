<p><strong>Name: <%= @atr.name %></p>
<p><strong>Total Number of Users: <%= @atr.users.count %></p>
<p><strong>Ticket Requirement: <%= @atr.tickets %></p>
<p><strong>Height Requirement: <%= @atr.min_height %></p>
<p><strong>Nausea Rating: <%= @atr.nausea_rating %></p>
<p><strong>Happiness Rating: <%= @atr.happiness_rating %></p>


<% if @user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path(@atr) %>
<% else %>
    <%= form_tag rides_path do %>
        <%= hidden_field_tag :user_id, @user.id %>
        <%= hidden_field_tag :attraction_id, @atr.id %>
        <%= submit_tag "Go on this ride" %>
    <% end %>
<% end %>