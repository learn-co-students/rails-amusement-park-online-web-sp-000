

<%= form_for @ride do |f| %>
    
    <% if current_user %>
    <%# f.hidden_field :user_id %>
    <%# f.hidden_field :attraction_id %>
    <input type='hidden' name='ride[user_id]' value='<%=current_user.id %>'>
    <input type='hidden' name='ride[attraction_id]' value='<%=@attraction.id %>'>
    <%= f.submit "Go on this ride" %>
    <% if @user.admin %>
    <%= link_to "Add", attraction_add_path(@attraction) %>
    <%= link_to "Edit", attraction_edit_path(@attraction) %>
    <%= link_to "Delete", attraction_path(@attraction) %>
    <% end %>
    <% end %>
    <% end %>