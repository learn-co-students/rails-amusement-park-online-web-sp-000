<h1><%= @attraction.name %></h1>
<h4>Ticket Cost:<%= @attraction.tickets %></h4>
<h4>Nausea Rating:<%= @attraction.nausea_rating %></h4>
<h4>Happiness Rating:<%= @attraction.happiness_rating %></h4>
<h4>Min. Height Required:<%= @attraction.min_height %></h4><br>

<% if @user.admin == false %>
    <%= form_tag('/rides', method: 'post') do %>
        <%= hidden_field_tag :attraction_id, @attraction.id %>
        <%= button_tag "Go on this ride" %>
    <% end %>
<% else %>
    <%= link_to "Edit Attraction", edit_attraction_path %>
<% end %>