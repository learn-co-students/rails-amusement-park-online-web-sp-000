<div class="center">
    <div class="info">
        <p>
            <strong>Name: </strong><%= @attraction.name %>
        </p>
        <p>
            <strong>Total Number of Users: </strong><% @attraction.users %>
        </p>
        <p>
            <strong>Ticket Requirement: </strong><%= @attraction.tickets %>
        </p>
        <p>
            <strong>Height Requirement: </strong><%= @attraction.min_height %>
        </p>
        <p>
            <strong>Nausea Rating: </strong><%= @attraction.nausea_rating %>
        </p>
        <p>
            <strong>Happiness Rating: </strong><%= @attraction.happiness_rating %>
        </p>
        <br>
        <% if !current_user.admin? %>
            <%= form_for @ride, :url => '/rides', :method => 'post', :class => "new_ride" do |f| %>
                <%= f.hidden_field :user_id, :value => @user.id %>
                <%= f.hidden_field :attraction_id, :value => @attraction.id %>
                <%= f.submit "Go on this ride" %>
            <% end %>
        <% else %>
            <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
        <% end %>
    </div>
</div>