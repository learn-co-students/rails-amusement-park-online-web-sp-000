<%= @attraction.name %>
<% if session[:admin] %>
  <%= link_to "Edit Attraction", edit_attraction_path %>
<% else %>
  <%= form_tag rides_path do %>
    <input type="hidden" name="user_id", value="<%= current_user %>"> 
    <input type="hidden" name="attraction_id", value="<%= @attraction.id %>">
    <input type="submit" value="Go on this ride">
  <% end %>
<% end %>