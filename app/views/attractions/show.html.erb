<b>Name: </b><%=@attraction.name%><br>
<b>Total Number of Users: </b><%=@attraction.users.count%><br>
<b>Ticket Requirement: </b><%=@attraction.tickets%><br>
<b>Height Requirement: </b><%=@attraction.min_height%> inches<br>
<b>Nausea Rating: </b><%=@attraction.nausea_rating%><br>
<b>Happiness Rating: </b><%=@attraction.happiness_rating%><br>
<%if current_user.admin%>
  <%=link_to "Edit Attraction", edit_attraction_path(@attraction)%>
  <%else%>
  <%=form_for Ride.new do |f|%>
    <%=f.hidden_field :attraction_id, :value => @attraction.id%>
    <%=f.submit value="Go on this ride"%>
   <%end%>
<%end%>
