<h1><%= @attraction.name %><h1>

<h3>Minimum Height:</h3>
<p><%= @attraction.min_height %></p>
<h3>Nausea Rating:</h3>
<p><%= @attraction.nausea_rating %></p>
<h3>Happiness Rating:</h3>
<p><%= @attraction.happiness_rating %></p>
<h3>Tickets:</h3>
<p><%= @attraction.tickets %></p>

<%if current_user.admin%>
        <%= link_to "Edit Attraction", edit_attraction_path(@attraction)%><br>
        <%= link_to "View All Attractions", attractions_path%>
<%else%>
    <%= form_for @ride do |f| %>
        <%= f.hidden_field :attraction_id%>
        <%= f.hidden_field :user_id %>
        <%= f.submit "Go on this ride"%>
        <%end%>
<%end%>



