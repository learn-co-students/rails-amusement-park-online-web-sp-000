<div class="center">
  <div class="info">
    <% if current_user.admin == true %>
    <p><strong>ADMIN</strong></p>
    <% end %>
    <p><strong>Name: </strong><%= @attraction.name %></p>
    <p><strong>Nausea Rating: </strong><%= @attraction.nausea_rating %></p>
    <p><strong>Happiness Rating: </strong><%= @attraction.happiness_rating %></p>
    <p><strong>Minimum Height: </strong><%= @attraction.min_height %></p>
    <p>
      <% if current_user.admin == false %>
        <%= form_for @ride do |f| %>
        <%= f.hidden_field :user_id, value: "#{current_user.id}" %>
        <%= f.hidden_field :attraction_id, value:"#{@attraction.id}"%>
        <%= f.submit "Go on this ride", class: "btn btn-primary m-5" %>
        <% end %>
      <% end %>
    </p>
    <p>
    <% if current_user.admin == true %>
    <%= link_to 'Edit Attraction', edit_attraction_path(@attraction, class:"btn btn-danger") %>
    <% end %>
    </p>
  </div>
</div>




