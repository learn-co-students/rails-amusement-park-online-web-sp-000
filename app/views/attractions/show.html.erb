Name: <%= @attraction.name %>
Total Number of Users: <%= @attraction.users.count %><br>
Ticket Requirement: <%= @attraction.tickets %><br>
Height Requirement: <%= @attraction.min_height %><br>
Nausea Rating: <%= @attraction.nausea_rating %><br><br>
Happiness Rating: <%= @attraction.happiness_rating %><br><br>

<% if current_user.admin %>
    <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
<% else %>
    <%= form_for @ride do |f| %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :attraction_id %>
        <%= f.submit "Go on this ride" %>
    <% end %>    
<% end %>        