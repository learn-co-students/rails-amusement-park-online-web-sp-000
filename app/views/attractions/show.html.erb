<h2><%= @attraction.name %>
<% if admin? %>
  <%= link_to "New Attraction", new_attraction_path %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %>
  <%= form_tag ({controller: 'rides', action: 'create', method: 'post', class: "navbar-brand"}) do %>
    <%= hidden_field :user, :id, value: current_user.id %>
    <%= hidden_field :attraction, :id, value: @attraction.id %>
    <input type=submit value='Go on this ride'>
  <% end %>
<% end %>
