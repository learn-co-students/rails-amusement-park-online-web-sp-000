<h1>Name: <%= @attraction.name %></h1>
<p>Tickets: <%= @attraction.tickets %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Happiness Rating: <%= @attraction.happiness_rating %></p>
<p>Min Height: <%= @attraction.min_height %></p>
<%= link_to "See attractions", attractions_path %>

<%= form_for(@ride) do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :attraction_id %>
    <%= f.submit "Go on this ride" %>
<% end %>

<% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path %>
<% end %>