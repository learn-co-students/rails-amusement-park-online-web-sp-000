<%= form_for @attraction do |f| %>
<label>Name</label><br>
<%= f.text_field :name %><br>
<label>Height Requirement (in inches)</label><br>
<%= f.number_field :min_height %><br>
<label>How fun is it? (1-5 scale)</label><br>
<%= f.number_field :happiness_rating %><br>
<label>How nausea-inducing is it? (1-5 scale)</label><br>
<%= f.number_field :nausea_rating %><br>
<label>How many tickets does it cost?</label><br>
<%= f.number_field :tickets %><br>
<%= f.submit  %>
<% end %>