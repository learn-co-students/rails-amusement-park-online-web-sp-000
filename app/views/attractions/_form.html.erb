<%= form_for @attraction do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <br>

  <%= f.label :min_height %>
  <%= f.number_field :min_height, required: true %>

  <br>

  <%= f.label :nausea_rating %>
  <%= f.number_field :nausea_rating, required: true %>
  <br>

  <%= f.label :happiness_rating %>
  <%= f.number_field :happiness_rating, required: true %>
  <br>

  <%= f.label :tickets %>
  <%= f.number_field :tickets, required: true %>
  <br>

  <%= f.submit %>
<% end %>