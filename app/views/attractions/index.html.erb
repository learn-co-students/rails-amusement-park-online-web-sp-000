<h1> Here are all the Attractions </h1>

<ul>
<% @attractions.each do |a| %>
    <% if @user.admin %>
        <li> <%= link_to "Show #{a.name}", a  %>
    <% else %>
        <li> <%= link_to "Go on #{a.name}", a %></li>
    <% end %>
<% end %>
</ul>
<% if current_user.admin %>
    <%= link_to "New Attraction", controller: 'attractions', action: 'new'%> 
<% end %>
