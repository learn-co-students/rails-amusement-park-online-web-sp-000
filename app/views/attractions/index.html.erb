<h1>Attractions</h1>
 
 
    <% @attractions.each do |attraction| %>
 
                <%= attraction.name %> <br />
       
                <%= attraction.tickets %>  <br />
          
            <%= link_to "Show #{attraction.name}", attraction_path(attraction) if current_user.admin %>  <br />
            <%= link_to "Go on #{attraction.name}", attraction_path(attraction) if !current_user.admin %>  <br />
          
    <% end %>

    <% if current_user.admin %>
        <%= link_to "New Attraction", new_attraction_path %>
    <% end %>
 