<h1>Attractions</h1>
<ul>
  <% @attractions.each do |attraction| %>
    <li><%= attraction.name%> <%= attraction.tickets%>
      <% if @user.admin %>
        <%= link_to "Show #{attraction.name}",attraction_path(attraction)%></li>
      <%else %>
        <%= link_to "Go on #{attraction.name}",attraction_path(attraction)%></li>
      <%end%>
  <% end %>
</ul>

<% if @user.admin %>
  <%= link_to 'New Attraction', new_attraction_path %>
<% end %>
