<h1>Attractions</h1>

<ul>
<% @attractions.each do |attraction| %>
    <li><label>Name: </label><%= attraction.name %> <label>Tickets:</label> <%=attraction.tickets%>

    <% if current_user.admin %>
        <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
    <% else %>
        <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
    <% end %></li>
<% end %>
</ul>

<% if @user %>
  <p>
    <%= link_to "Back to profile", user_path(@user) %>
  </p>
<% else %>
  <p><%= link_to 'New Attraction', new_attraction_path %></p>
<% end %>

<%= link_to 'Log Out', signout_path %>