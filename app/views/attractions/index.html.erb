<% if !current_user.admin %>
<% @attractions.all.each do |attraction| %>
<%= attraction.name %><br>
<%= attraction.tickets %> tickets<br>
<%= link_to "Go on #{attraction.name}", attraction_path(attraction) %><br><br>
<% end %>

<% elsif current_user.admin %>
<% @attractions.all.each do |attraction| %>
<%= link_to "Show #{attraction.name}", attraction_path(attraction) %><br><br>
<% end %>
<% end %>

<br>
<% if current_user.admin %>
<h3><%= link_to "New Attraction", new_attraction_path %></h3>
<% end %>



 

