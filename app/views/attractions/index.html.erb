This is the Attractions index page:
<br>
<% @attractions.each do |attraction| %>
  <h1>Ride: <%=attraction.name%></h1>
  <ul>
    <li>Nausea Rating: <%=attraction.nausea_rating%></li>
    <li>Happiness Rating: <%=attraction.happiness_rating%></li>
    <li>Tickets: <%=attraction.tickets%></li>
    <li>Minimum Height: <%=attraction.min_height%></li>
    <li><%=link_to "Go on #{attraction.name}.", attraction_path(attraction) unless @user.admin%></li>
    <li><%=link_to("Show #{attraction.name}", attraction_path(attraction)) if @user.admin%></li>
    <li><%=link_to("Edit Attraction", edit_attraction_path(attraction)) if @user.admin%></li>
  </ul>
<%end%>

<%= link_to("New Attraction", new_attraction_path) if @user.admin%>
