<h1>Attractions</h1>
<% if session[:admin] %>
  <% @attractions.each do |attraction| %>
    <h3><%= attraction.name %></h3>
    <p><%= link_to "Show #{attraction.name}", attraction_path(attraction.id) %></p>
    <br><br>
  <% end %>
  <%= link_to "New Attraction", new_attraction_path %>
<% else %>
  <% @attractions.each do |attraction| %>
    <h3><%= attraction.name %></h3>
    <p><%= link_to "Go on #{attraction.name}", attraction_path(attraction.id) %></p>
    <br><br>
  <% end %>
<% end %>