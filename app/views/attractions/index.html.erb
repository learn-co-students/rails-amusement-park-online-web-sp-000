<h1>Current List of Attractions:</h1>

<ul>
<% @attractions.each do |attraction| %>
  <% if current_user.admin? %>
    <li>
      <h3><%= link_to 'Show '+attraction.name, attraction_path(attraction) %></h3>
      <p><%= link_to 'edit', edit_attraction_path(attraction) %></p>
    </li>
  <% else %>
    <li><h2><%= link_to 'Go on '+attraction.name, attraction_path(attraction) %></h2></li>
  <% end %>
<% end %>
</ul>
