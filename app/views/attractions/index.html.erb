<h1>Listing Attractions: </h1><br>
<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr> 
      <td><strong>Name</strong></td>
      <td><strong>Tickets</strong></td>
      <td><strong>Details</strong></td>
    </tr>

    <% @atrs.all.each do |atr| %>
      <tr>
        <td><%= atr.name %></td>
        <td><%= atr.tickets %></td>
        <% if @user.admin %>
          <td><%= link_to "Show #{atr.name}", attraction_path(atr) %></td>
        <% else %>
          <td><%= link_to "Go on #{atr.name}", attraction_path(atr) %></td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>

<% if @user.admin %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>