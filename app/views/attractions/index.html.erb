<h1>Attractions</h1>

<% if @user.admin == true %>
	<%= link_to "New Attraction", new_attraction_path %>
<% end %>

<% @attractions.each do |attraction| %>
	<% if @user.admin == true %>
		<h3><%= link_to "Show #{attraction.name}", attraction_path(attraction)%></h3>
		
	<% else %>
		<p><%= link_to "Go on #{attraction.name}", attraction_path(attraction)%></p>
	<% end %>
	
<% end %>
