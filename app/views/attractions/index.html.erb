<ul>
<% @attractions.each do |attraction| %>
   <li>Name: <%= attraction.name %></li>
   <li>Tickets: <%= attraction.tickets %></li>
   <% if current_user.admin %>
      <li><%= link_to "Show #{attraction.name}" , attraction_path(attraction) %></li>
   <% else %>
      <li><%= link_to "Go on #{attraction.name}" , attraction_path(attraction) %></li>
   <% end %>
<% end %>
</ul>

<% if current_user.admin %>
  <p><%= link_to "New Attraction", new_attraction_path %></p>
<% else %>
  <p><%= link_to "Back to profile", user_path(@user) %></p>
<% end %>



  