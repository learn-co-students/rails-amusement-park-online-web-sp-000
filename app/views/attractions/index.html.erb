<h1>All Attractions</h1>

<table class="table">
    <thead>
        <tr><th colspan="3"></th></tr>
    </thead>
    <tbody>
        <tr>
            <td><strong>Name</strong></td>
            <td><strong>Tickets</strong></td>
            <td><strong>Details</strong></td>
        </tr>        
        <% @attractions.each do |a| %>
            <tr>
                <td><%= a.name %></td>
                <td><%= a.tickets %></td>
                <td><%= link_to "Go on #{a.name}", attraction_path(a) if !current_user.admin %></td>
                <td><%= link_to "Show #{a.name}", attraction_path(a) if current_user.admin %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to "New Attraction", new_attraction_path if current_user.admin %></p>