<h1>Attractions Index Page</h1>

<% @attractions.each do |attraction|%>
  <% if @current_user.admin %>
    <li> <%= link_to "Show #{attraction.name}", "attractions/#{attraction.id}" %> </li>
  <% else%>
    <li> <%= link_to "Go on #{attraction.name}", "attractions/#{attraction.id}" %> </li>
  <% end %>
<% end %>

<% if @current_user.admin %>
  <%= link_to "New Attraction", "/attractions/new" %>
<%end%>
