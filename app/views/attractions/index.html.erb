<h1>List of attractions:</h1>

<% if is_admin? %>
  <% @attractions.each do |at| %>
    <p><%= link_to "Show #{at.name}", attraction_path(at) %></p>
  <% end %>
  <br>
  <h3><%= link_to "New Attraction", new_attraction_path %></h3>
<% else %>
  <% @attractions.each do |at| %>
    <p><%= link_to "Go on #{at.name}", attraction_path(at) %></p>
  <% end %>
<% end %>
