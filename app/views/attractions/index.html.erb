<% @attractions.each do |a| %>
    <% if current_user.admin %>
        <%= a.name %>   ::    <%= link_to "Show #{a.name}", attraction_path(a) %> <br>
    <% else %>
        <%= a.name %>   ::    <%= link_to "Go on #{a.name}", attraction_path(a) %> <br>
    <% end %>
<% end %>

<% if current_user.admin %>
    <%= link_to "New Attraction", new_attraction_path %>
<% end %>
