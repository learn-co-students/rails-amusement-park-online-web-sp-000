<h1>New attraction</h1>

<%= form_for Attraction.new do |f| %>
  <div class="form-group">
    <%= f.label "Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Height Requirement (in inches)" %>
    <%= f.text_field :min_height, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "How fun is it? (1-5 scale)" %>
    <%= f.text_field :happiness_rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "How nausea-inducing is it? (1-5 scale)" %>
    <%= f.text_field :nausea_rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "How many tickets does it cost?" %>
    <%= f.text_field :tickets, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Create Attraction", class: "btn btn-primary" %>
  </div>

<% end %>