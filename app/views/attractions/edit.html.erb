<%= form_for @attraction do |a| %>
  <%= a.label :name %><br>
    <%= a.text_field :name %>

  <%= a.label :tickets %><br>
    <%= a.number_field :tickets %>

  <%= a.label :nausea_rating %><br>
    <%= a.number_field :nausea_rating %>

  <%= a.label :happiness_rating %><br>
    <%= a.number_field :happiness_rating %>

  <%= a.label :min_height, "Height Requirements (in inches)" %><br>
    <%= a.number_field :min_height %>

    <%= a.submit "Update Attraction" %>

<% end %>

<%= link_to 'Show', @attraction %>
<%= link_to 'Back', attractions_path %>
