<h1>Edit Attraction</h1>
<%= form_for @attraction do |f| %>
    <%= f.label "Name:" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label "Tickets:" %>
    <%= f.text_field :tickets %>
    <br>
    <%= f.label "Nausea Rating:" %>
    <%= f.text_field :nausea_rating %>
    <br>
    <%= f.label "Happiness Rating:" %>
    <%= f.text_field :happiness_rating %>
    <br>
    <%= f.label "Min. Height (in inches):" %>
    <%= f.text_field :min_height %>
    <br>
    <%= f.submit "Update Attraction" %>
<% end %>