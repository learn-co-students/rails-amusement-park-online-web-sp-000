<%= form_tag('/signin') do %>
  <%= label_tag :user_name, "Select a name from below" %><br>
  <%= select_tag "user[name]", options_from_collection_for_select(@users, "name", "name") %><br>
  <br>
  <%= label_tag :password, "Password" %><br>
  <%= password_field_tag "password" %><br>
  <br>
  <%= submit_tag "Sign In" %>

<% end %>
