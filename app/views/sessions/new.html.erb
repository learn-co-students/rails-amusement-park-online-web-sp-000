<%= form_for @user do |f| %>
    <%= f.label :name, 'Your Name:'%>
    <%= f.collection_select :name, User.all, :name, :name, {:prompt => 'Please select your username from this dropdown'}, {:name => 'user[name]', :id => 'user[name]'} %>
    <br>
    <%= f.label :password, 'Your Password:' %>
    <%= f.password_field :password, {:name => 'password', :id => 'password'}%>
    <br>
    <%= f.button 'Sign In', type: 'submit' %>
  <% end %>
