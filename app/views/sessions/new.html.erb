<%= form_tag url: signin_post_path, method: :post do %>
    <%# <%= binding.pry %>
  <%= label_tag :name, 'Your name:' %>
  <%= select_tag :user_name, options_from_collection_for_select(User.all, :id, :name), prompt: 'Please select your username from this dropdown' %><br/><br/>  
    
  <%= label_tag :password, 'Your password:' %><br/>
  <%= password_field_tag :password, nil, class: "form-control" %><br/>  

  <%= submit_tag 'Sign In' %>
<% end %>
<br/>
