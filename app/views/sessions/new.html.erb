<%= form_for @user do |f| %>
    <%= f.label "Name" %>
    <%= f.collection_select :name, User.all, :id, :name %><br>
    <%= f.label "Password" %>
    <%= password_field_tag "password" %><br>
    <%= f.submit "Sign In" %>
<% end %>
<a href="users/new"><b>Sign Up<b></a>

