<%= form_for(:user, :url => sessions_path) do |f| %>
  <div class="form-group">
    <%= f.label :id, "Your name:" %>
    <%= f.collection_select(:name, User.all, :name, :name, {:include_blank => 'Please select your username from this dropdown'}) %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Your password:" %>
    <%= f.text_field(:password, class: "form-control") %>
  </div>
  <%= f.submit("Sign In") %>
<% end %>
