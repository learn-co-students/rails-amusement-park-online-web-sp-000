<%= form_for @user, url: "/signin", method: :post do |f| %>
    <%= f.label "Name" %>
    <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please select your username from this dropdown") %>
    <br>
    <%= f.label "Password" %>
    <%= password_field_tag "password" %>
    <br>
    <%= f.submit "Sign In" %>
 <% end %>
