<h1>Login</h1>
<br>

<%= form_tag login_path do %>
    <div class="form-group">
        <%= label_tag :user_name, "Your name:" %>
        <%= collection_select(@user, :user_name, @users, :name, :name, {prompt: "Please select your username from this dropdown"}) %>        
    </div>

    <div class="form-group">
        <%= label_tag :user_password, "Your password:" %>
        <br>
        <%= password_field_tag :user_password, nil, class: "form-control" %>

        <div class="actions">
            <br>
            <%= submit_tag "Sign In", class: "btn btn-primary" %>
        </div>
    </div>
<% end %>