<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
<%= label_tag "Select Your Name:" %>
  <%= select_tag "user_name",
  options_from_collection_for_select(User.all,
   "id", "name"), include_blank: true %><br / >
   <%= label_tag "Enter Your Password:" %>
   <%= password_field_tag %><br />
   <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
   <%= submit_tag "Sign In" %>
<% end %>
