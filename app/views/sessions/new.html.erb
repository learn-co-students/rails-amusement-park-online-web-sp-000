<h1>Login</h1>

<%= form_tag('/session', method: :post) do %>

   <%= label_tag :name, "Your name!" %>
   <%= collection_select :user, :name, User.all, :name, :name, prompt: "Select your username from the dropdown" %><br>

   <%= label_tag :password, "Your password:" %>
   <%= password_field_tag :password, nil %><br>

   <%= submit_tag "Sign In" %>

<% end %>