<h1>Login here</h1>
<%= form_for(@user, url: '/signin') do |f| %>
  <%= f.label :name, "Select your name" %>
  <%= f.collection_select  :name, @users, :id, :name %>
  <br>
  <%= f.label :password, "Enter your password" %>
  <%= f.password_field :password %>
  <br>
  <%= f.submit "Sign In" %>
<% end %>