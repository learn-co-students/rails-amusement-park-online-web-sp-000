<h1>Sign in below</h1>
    
<%= form_tag('/signin', method: :post) do %>
    <%= label_tag(:name) %>
    <%= collection_select(:user, :name, User.all, :name, :name, include_blank: true) %>
    <%= label_tag(:password) %>
    <%= password_field_tag(:password) %> <br>
    <%= submit_tag("Sign In") %>
<% end %>