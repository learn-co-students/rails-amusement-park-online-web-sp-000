<%= form_tag("/signin", controller: "rides", action: "create", method: :post) do %>

    <%= label_tag(:name, "Your Name") %><br>
    <%= collection_select(:user, :name, User.all, :name, :name) %> <br>

    <%= label_tag(:password, "Your Password") %>
    <%= password_field_tag(:user_password) %><br>
    <%= password_field_tag(:password) %><br>

    
    
    <%= submit_tag("Sign In") %>
<% end %>


